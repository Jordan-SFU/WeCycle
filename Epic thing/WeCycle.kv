        Rectangle:
            pos: self.pos
            size: self.size
            source: "Assets/Background.png"

    dailyChallenge1: dc1
    dailyChallenge2: dc2
    dailyChallenge3: dc3

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Button:
            text: "Back"
            size_hint: .1, .1
            on_press: root.back()

        Label:
            text: "Daily Challenges"
            color: kivy.utils.get_color_from_hex('#1eb062')
            font_size: 32
            bold: True

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "placeholder1"
                id: dc1
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24

            Label:
                text: "placeholder2"
                id: dc2
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24

            Label:
                text: "placeholder3"
                id: dc3
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24