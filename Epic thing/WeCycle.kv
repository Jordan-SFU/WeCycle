            size_hint: 1, 2

        Label:
            text: "Local highscore is"
            font_size: 24
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            id: highscore
            font_size: 64
            bold: True
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text: "set on"
            font_size: 24
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            id: highscoreDate
            font_size: 48
            bold: True
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text: "by"
            font_size: 24
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            id: highscoreUser
            font_size: 48
            bold: True
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text:

<Challenges>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Assets/Background.png"

    dailyChallenge1: dc1
    dailyChallenge2: dc2
    dailyChallenge3: dc3

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Button:
            text: "Back"
            size_hint: .1, .5
            on_press: root.back()
            background_color: 0, 0, 1, .5

        Label:
            text: "Daily Challenges"
            color: kivy.utils.get_color_from_hex('#1eb062')
            font_size: 32
            bold: True

        BoxLayout:
            orientation: "vertical"

            Label:
                text: "placeholder1"
                id: dc1
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24
                text_size: self.width, None
                size_hint: 1, None

            Label:
                text: "placeholder2"
                id: dc2
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24
                text_size: self.width, None
                size_hint: 1, None

            Label:
                text: "placeholder3"
                id: dc3
                color: kivy.utils.get_color_from_hex('#1eb062')
                font_size: 24
                text_size: self.width, None
                size_hint: 1, None

            Label:
                text: "\n"
                size_hint: 1, 3

<About>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Assets/Background.png"

    BoxLayout:
        size: root.width, root.height
        orientation: "vertical"

        Button:
            text: "Back"
            size_hint: .1, .5
            on_press: root.back()
            background_color: 0, 0, 1, .5

        Image:
            source: "Assets/Logo.png"
            size_hint: 1, 1

        Label:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text: "     WeCycle is a free, student-made application designed to promote and encourage sustainability and environmental integrity within our communities. \n"
            font_size: 16
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text: "     Goal: Start working on activities that help reduce ecological harm such as sorting out disposables into separate containers, picking up litter, or using alternative transportation methods besides gas vehicles. Click on the 'log activities' button and you will be able to perform the following:\n"
            font_size: 16
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text: "  • Sorting Out:"
            font_size: 20
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text: "     For every disposable item you insert into their corresponding container, whether it be your own trash or litter on the ground, click on the icons that represent the trash to gain points. More points will be awarded for more valuable items, such as compost!"
            font_size: 16
            color: kivy.utils.get_color_from_hex('#1eb062')

        Label:
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            text: "\n\n     NOTE: WeCycle is in no way affiliated with or inspired by the completely separate game WiiFit™️. All similarities should be disregarded as a coincidence."
            font_size: 14
            color: kivy.utils.get_color_from_hex('#1eb062')